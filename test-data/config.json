{
  "application": {
    "name": "JSON MCP Server",
    "version": "1.0.0",
    "environment": "production",
    "debug": false
  },
  "database": {
    "host": "localhost",
    "port": 5432,
    "name": "mcp_server",
    "credentials": {
      "username": "admin",
      "password": "encrypted_password_hash"
    },
    "pool": {
      "min": 2,
      "max": 10,
      "timeout": 30000
    }
  },
  "server": {
    "port": 3000,
    "host": "0.0.0.0",
    "cors": {
      "enabled": true,
      "origins": ["http://localhost:3000", "https://app.example.com"]
    },
    "rateLimit": {
      "windowMs": 900000,
      "max": 100
    }
  },
  "logging": {
    "level": "info",
    "format": "json",
    "outputs": ["console", "file"],
    "file": {
      "path": "/var/log/mcp-server.log",
      "maxSize": "10MB",
      "maxFiles": 5
    }
  },
  "features": {
    "enableCache": true,
    "enableAnalytics": true,
    "enableMetrics": false,
    "maxFileSize": 10485760,
    "supportedFormats": ["json", "jsonl", "csv"]
  },
  "security": {
    "jwt": {
      "secret": "your-secret-key",
      "expiresIn": "24h"
    },
    "encryption": {
      "algorithm": "aes-256-gcm",
      "keyLength": 32
    }
  }
}